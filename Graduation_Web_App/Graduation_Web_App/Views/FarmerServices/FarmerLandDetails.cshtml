    <script>
        function EditLand() {
            var formData = $("#LandEditForm").serialize();

            $.ajax({
                url: "/FarmerServices/EditMyLand", // Update the URL to your POST endpoint
                type: "POST",
                data: formData,
                success: function (response) {
                    $("#LandEditModal").modal("hide");
                    alert("Your request done successfully!");
                },
                error: function (error) {
                    alert("An error occurred. Please try again.");
                }
            });
        });

