@model FarmerHomeViewModel
@{
    ViewData["Title"] = "الصفحه الرئيسيه للمزارع";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>خدمات حصاد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            direction: rtl;
            text-align: right;
        }

        .hero {
            position: relative;
            text-align: center;
            color: white;
        }

            .hero img {
                width: 100%;
                height: auto;
            }

            .hero h1 {
                position: absolute;
                top: 50%;
                text-align: center;
                left: 50%;
                transform: translate(70%, -155%);
                font-size: 4.5em;
                padding: 10px 20px;
                border-radius: 10px;
                color: #ffffff;
                padding: 20px;
                border-radius: 15px;
                font-weight: bold;
            }

        .services {
            position: relative;
            display: flex;
            justify-content: space-between;
            flex-wrap: nowrap;
            padding: 0 20px;
            margin-top: -100px;
        }

        .card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            width: 18%;
            margin: 10px 5px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease, border-color 0.3s ease;
            position: relative;
            z-index: 1;
            opacity: 0;
            transform: translateY(20px);
            perspective: 1000px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px; /* Adjusted height for better spacing with buttons */
        }

            .card.visible {
                opacity: 1;
                transform: translateY(0);
                transition: opacity 1s ease, transform 1s ease;
            }

            .card:hover {
                transform: scale(1.05);
                border: 3px solid #198754;
            }

            .card img {
                width: 50px;
                height: 50px;
            }

            .card h2 {
                margin: 20px 0;
                font-size: 1.2em;
            }

            .card button, .card a {
                background: #198754;
                color: #fff;
                max-height: 40px;
                min-width: 200px;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background 0.3s ease;
                margin: 5px;
            }

                .card button:hover, .card a:hover {
                    background: white;
                    color: #198754;
                    border: 1px solid #198754;
                }

        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            transition: transform 0.6s;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .card-front {
            transform: rotateY(0deg);
        }

        .card-back {
            transform: rotateY(180deg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .card-back .button-container {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                align-items: center;
                gap: 10px; /* Adds space between buttons */
            }

                .card-back .button-container button {
                    flex: 1 1 40%;
                    margin: 5px;
                }

        .card:hover .card-front {
            transform: rotateY(-180deg);
        }

        .card:hover .card-back {
            transform: rotateY(0deg);
        }



        .description {
            padding: 20px;
            line-height: 1.6;
            font-size: 1.8em;
            text-align: right;
            margin-top: 20px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            opacity: 0;
            transform: translateY(20px);
        }

            .description.visible {
                opacity: 1;
                transform: translateY(0);
                transition: opacity 1s ease, transform 1s ease;
            }

        header {
            background: #fff;
            padding: 10px 0;
            border-bottom: 2px solid #0e690e;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .logo img {
            width: 75px;
            height: 75px;
            max-width: 100px;
        }

        nav {
            flex: 1;
            text-align: center;
        }

        .nav-links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
        }

            .nav-links li {
                margin: 0 15px;
            }

            .nav-links a {
                color: #0e690e;
                text-decoration: none;
                font-size: 18px;
            }

                .nav-links a.active {
                    border-bottom: 2px solid white;
                }

        .login {
            font-size: 18px;
        }

            .login a {
                color: #0e690e;
                text-decoration: none;
            }

        .LastLink {
            position: absolute;
            right: 90%;
            text-decoration: none;
            color: #fff;
            font-size: 20px;
            top: 30px;
        }

        .footer {
            background-color: #198754;
            padding: 20px 0;
            color: white;
            text-align: center;
        }

            .footer .container {
                max-width: 1200px;
                margin: auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: wrap;
            }

            .footer .column {
                flex: 1;
                min-width: 200px;
                padding: 10px;
            }

                .footer .column img {
                    max-width: 150px;
                    margin-bottom: 10px;
                }

            .footer .social-icons a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
                font-size: 24px;
            }

            .footer .links a {
                display: block;
                color: white;
                text-decoration: none;
                margin: 5px 0;
            }

                .footer .links a:hover {
                    text-decoration: underline;
                }

            .footer .contact-info p {
                margin: 5px 0;
                color: #fff;
            }

            .footer .copy {
                margin-top: 40px;
                font-size: 14px;
                border-top-style: solid;
                border-top-width: 2px;
                border-block-color: #fff;
            }

                .footer .copy p {
                    margin-top: 20px;
                }

        .FormContent {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-container {
            background-color: white;
            width: 90%;
            max-width: 800px;
            padding: 20px;
            box-shadow: 5px 5px 15px black;
            border-radius: 15px;
            text-align: center;
            margin: 50px auto
        }

        .profile-title {
            font-size: 30px;
            margin-bottom: 20px;
            color: #198754;
        }

        .profile-section {
            margin-bottom: 20px;
            position: relative;
            padding: 10px;
            border: 2px solid #198754;
            border-radius: 15px;
            text-align: right;
        }

            .profile-section label {
                position: absolute;
                top: -12px;
                right: 10px;
                background-color: white;
                padding: 0 5px;
                font-weight: bold;
                font-size: 16px;
                color: #198754;
            }

            .profile-section input, select {
                width: 100%;
                padding: 10px;
                border: 2px solid #198754;
                border-radius: 20px;
                font-size: 18px;
                margin-bottom: 20px;
                margin-top: 10px;
                background-color: white;
                box-shadow: 2px 2px 2px #198754;
                outline: none;
            }

        .profile-buttons {
            display: flex;
            justify-content: space-around;
        }

            .profile-buttons .btn {
                padding: 10px 20px;
                color: #fff;
                transition: background-color 0.3s ease;
                border: 2px solid #198754;
                font-size: 25px;
                background-color: #198754;
                border-radius: 20px;
                cursor: pointer;
            }

        .btn:hover {
            background-color: white;
            color: #198754;
            transform: scale(1.02);
            text-decoration: none;
        }
                </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
                <img src="/7asadLogo.jpg" alt="Logo">
            </div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/FarmerServices/FarmerDetails">البيانات الشخصيه</a></li>
                    <li><a href="/FarmerServices/FarmerProducts">محاصيلي الزراعيه</a></li>
                    <li><a href="/FarmerServices/FarmerEquipments">معداتي الزراعيه</a></li>
                    <li><a href="/FarmerServices/FarmerLands">اراضي الزراعيه</a></li>
                    <li><a href="/FarmerServices/FarmerHistory">عروضي</a></li>
                </ul>
            </nav>
            <div class="login">
                <a href="/SharedServices/Logout"><i class="bi bi-person"></i> تسجيل الخروج</a>
            </div>
        </div>
    </header>
    <!-- Assuming header is included here -->
    <main>
        @if (TempData["GetFarmerProfileError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetFarmerProfileError"]</p>
            </div>
        }

        @if (TempData["EditResult"] != null)
        {
            <div class="alert alert-success align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["EditResult"]</p>
            </div>
        }

        @if (TempData["EditResultError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["EditResultError"]</p>
            </div>
        }

        @if (TempData["UploadSuccessResult"] != null)
        {
            <div class="alert alert-success align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["UploadSuccessResult"]</p>
            </div>
        }

        @if (TempData["UploadErrorResult"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["UploadErrorResult"]</p>
            </div>
        }

        @if (TempData["GetAllEngineerError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetAllEngineerError"]</p>
            </div>
        }

        @if (TempData["GetEquipmentsOffers"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetEquipmentsOffers"]</p>
            </div>
        }
        @if (TempData["GetAllLandOffers"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetAllLandOffers"]</p>
            </div>
        }
        @if (TempData["GetAllProductOffers"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetAllProductOffers"]</p>
            </div>
        }
        @if (TempData["GetAllEquipmentsError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetAllEquipmentsError"]</p>
            </div>
        }
        @if (TempData["GetAllLandsError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetAllLandsError"]</p>
            </div>
        }
        @if (TempData["GelAllProductsError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GelAllProductsError"]</p>
            </div>
        }
        
        <section class="hero">
            <img src="/FarmerHomePage/img.png" alt="Farmer in the field">
            <h1>
                خدمات حصاد
                <br>
                لتسهيل الزراعة
            </h1>
        </section>
        <section class="services">
            <div class="card">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 1">
                    <h2>تأجير و استئجار الاراضي</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/FarmerServices/GetAllLands'">عرض الاراضي</button>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#UploadLandModal">ارفع ارضك</button>
                </div>
            </div>
            <div class="card">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 2">
                    <h2>بيع و شراء المحاصيل</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/FarmerServices/GetAllProducts'">عرض المحاصيل</button>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#UploadProductModal">ارفع محصولك</button>
                </div>
            </div>
            <div class="card">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 3">
                    <h2>التعاقد الزراعي مع المهندسين</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/FarmerServices/GetAllEngineers'">عرض المهندسين</button>
                </div>
            </div>
            <div class="card">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 4">
                    <h2>المعدات الزراعيه</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/FarmerServices/GetAllEquipments'">عرض المعدات</button>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#UploadEquipmentModal">رفع معداتك للايجار</button>
                </div>
            </div>
            <div class="card">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 4">
                    <h2>العروض المقدمه اليك من الشركات</h2>
                </div>
                <div class="card-face card-back">
                    <a href="/FarmerServices/GetAllProductOffers" class="btn btn-success">عروض للمحاصيل</a>
                    <a href="/FarmerServices/GetAllLandOffers" class="btn btn-success">عروض للارض</a>
                </div>
            </div>

            <div class="card">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 4">
                    <h2>العروض المقدمه اليك من المزارعين</h2>
                </div>
                <div class="card-face card-back">
                    <a href="/FarmerServices/GetAllFarmerProductOffers" class="btn btn-success">عروض للمحاصيل</a>
                    <a href="/FarmerServices/GetAllFarmerLandOffers" class="btn btn-success">عروض للارض</a>
                    <a href="/FarmerServices/GetAllEquipmentOffers" class="btn btn-success">ايجار للمعدات</a>
                </div>
            </div>
            
        </section>
        <section class="description">
            <p>بمجرد قرارك بالبدء في الزراعة، تكتشف العديد من التحديات، وأولها مشكلة المعدات وأسعارها العالية. لذلك، قررنا في "حصاد" أن نوفر لك المعدات الزراعية بنظام الإيجار طوال فترة الزراعة بأسعار مناسبة.</p>
            <p>إذا كنت مزارعًا ولديك آلات زراعية لا تستخدمها بشكل كامل، يمكنك عرضها على "حصاد" وسنقوم بتأجيرها لك، مما يتيح لك الاستفادة منها بشكل أفضل.</p>
            <p>أما إذا كنت تملك أراضٍ زراعية وتبحث عن من يزرعها، لكنك لا تستطيع العثور على الشخص المناسب، فإن "حصاد" هو الحل الأمثل لك.</p>
            <p>وإذا كنت مزارعًا لا تملك أرضًا زراعية وتحتاج للعمل في أرض، يمكنك تأجير الأراضي الزراعية من "حصاد" بسهولة.</p>
            <p>يمكنك من خلال "حصاد" عرض المحاصيل الزراعيه اللي انت بتمتلكها علشان تبيعها وايضا اذا كنت تريد شراء كميه من احدي المحتصيل الزراعيه فان حصاد يمنكه توفير ذلك اليك بكل سهوله. </p>
            <p>يمكنك من خلال "حصاد" طلب خدمه من المهندسين الزراعين المتوفرين لدينا ان كنت ترغب في معرفه مقدار ملائمه الارض التي تمتلكها مع المحصول الذي ترغب في زراعته.</p>
            <p>نحن في "حصاد" نعمل على تسهيل العملية الزراعية من خلال تقديم حلول مبتكرة ومناسبة لجميع المزارعين وأصحاب الأراضي.</p>
        </section>


        <!-- Upload Land Modal -->
        <div class="modal fade" id="UploadLandModal" tabindex="-1" aria-labelledby="UploadLandModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="FormContect">
                        <form method="post" enctype="multipart/form-data" class="profile-container" asp-action="UploadLand" asp-controller="FarmerServices" id="UploadLandForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="profile-section">
                                    <label for="land-area" class="label"> -- قيراط مساحة الأرض </label>
                                    <input type="number"  required name="LandSize">
                                    <span asp-validation-for="LandDto.LandSize"></span>
                            </div>
                            <div class="profile-section">
                                <label for="land-address" class="label">عنوان الأرض</label>
                                <input type="text" required name="LandLocation">
                                <span asp-validation-for="LandDto.LandLocation"></span>
                            </div>
                           
                            <div class="profile-section">
                                    <label for="land-description" class="label">أضف وصف للأرض</label>
                                    <input type="text" class="form-control" required name="LandDescribtion">
                                    <span asp-validation-for="LandDto.LandDescribtion"></span>
                            </div>

                            <div class="profile-section">
                                    <label for="suitable-crops" class="label">نوع التربه الزراعيه</label>
                                    <select id="suitable-crops" required  name="LandType" asp-items="@Html.GetEnumSelectList(typeof(LandTypes))">
                                        <option value="">-- اختار نوع التربه --</option>
                                    </select>
                                    <span asp-validation-for="LandDto.LandType"></span>
                            </div>

                            <div class="profile-section">
                                    <label for="land-image" class="label">أضف صورة الأرض</label>
                                    <input type="file" required name="landimage">
                            </div>


                            <div class="form-group" hidden>
                                <label asp-for="FarmerId" class="control-label"></label>
                                <input asp-for="FarmerId" class="form-control" value="@ViewBag.FarmerId" hidden />
                            </div>
                            <div class="profile-buttons">

                            <button type="submit" class="btn btn-success" onsubmit="UploadLand()">رفع البيانات</button>
                            <button type="button" class="btn btn-success" data-bs-dismiss="modal">غلق النافذه</button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>

       
        <!-- Upload Product Modal -->
        <div class="modal fade" id="UploadProductModal" tabindex="-1" aria-labelledby="UploadProductModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="FormContent">
                        <form method="post" enctype="multipart/form-data" class="profile-container" asp-action="UploadCrops" asp-controller="FarmerServices" id="UploadProductForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="profile-section">
                                <label for="land-area" class="label"> اسم المحصول </label>
                                <input type="text"  name="ProductName">
                                <span asp-validation-for="ProductDto.ProductName"></span>
                            </div>
                            <div class="profile-section">
                                <label for="land-address" class="label">وزن المحصول -- طن</label>
                                <input type="number" required name="ProductWeight">
                                <span asp-validation-for="ProductDto.ProductWeight"></span>
                            </div>
                            
                            <div class="profile-section">
                                <label for="land-description" class="label">اضف سعر المحصول -- طن</label>
                                <input type="number" required name="ProductPrice">
                                <span asp-validation-for="ProductDto.ProductPrice"></span>
                            </div>

                            <div class="profile-section">
                                <label for="suitable-crops" class="label">نوع جوده المحصول</label>
                                <select id="suitable-crops" required name="ProductQuality" asp-items="@Html.GetEnumSelectList(typeof(ProductQualityTypes))">
                                    <option value="">-- اختار جوده المحصول --</option>
                                </select>
                                <span asp-validation-for="ProductDto.ProductQuality"></span>
                            </div>
                            <div class="profile-section">
                                <label for="land-description" class="label">أضف وصف للمحصول</label>
                                <input type="text" required name="ProductDescribtion">
                                <span asp-validation-for="ProductDto.ProductDescribtion"></span>
                            </div>
                            <div class="profile-section">
                                <label for="land-image" class="label">أضف صورة المحصول</label>
                                <input type="file" required name="ProductImage">
                            </div>
                            <div class="form-group" hidden>
                                <input type="hidden" class="form-control" value="@ViewBag.FarmerId" name="FarmerId">
                            </div>
                            <div class="profile-buttons">

                            <button type="submit" class="btn btn-success" onsubmit="UploadProduct()">ارسال الطلب</button>
                            <button type="button" class="btn btn-success" data-bs-dismiss="modal">غلق النافذه</button>
                            </div>
                        </form>
                    </div>
