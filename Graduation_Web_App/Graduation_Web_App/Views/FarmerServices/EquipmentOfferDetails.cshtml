@using Graduation_Web_App.Models;
@model FarmerEquipmentImageDto;
@{
    ViewData["Title"] = "عرض تفاصيل تاجير المعده الزراعيه";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>عرض تفاصيل تاجير المعده الزراعيه</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: white;
        }

        header {
            background: #fff;
            padding: 10px 0;
            border-bottom: 2px solid #198754;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .logo img {
            max-width: 100px;
        }

        nav {
            flex: 1;
            text-align: center;
        }

        .nav-links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
        }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links a {
            color: #198754;
            text-decoration: none;
            font-size: 18px;
        }

        .nav-links a.active {
            border-bottom: 2px solid white;
        }

        .login {
            font-size: 18px;
        }

        .login a {
            color: #198754;
            text-decoration: none;
        }

        .LastLink {
            position: absolute;
            right: 90%;
            text-decoration: none;
            color: #fff;
            font-size: 20px;
            top: 30px;
        }

        .footer {
            background-color: #198754;
            padding: 20px 0;
            color: white;
            text-align: center;
            margin-top: 50px;
        }

        .footer .container {
            max-width: 1200px;
            margin: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .footer .column {
            flex: 1;
            min-width: 200px;
            padding: 10px;
        }

        .footer .column img {
            max-width: 150px;
            margin-bottom: 10px;
        }

        .footer .social-icons a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            font-size: 24px;
        }

        .footer .links a {
            display: block;
            color: white;
            text-decoration: none;
            margin: 5px 0;
        }

        .footer .links a:hover {
            text-decoration: underline;
        }

        .footer .contact-info p {
            margin: 5px 0;
        }

        .footer .copy {
            margin-top: 40px;
            font-size: 14px;
            border-top: 2px solid white;
        }

        .footer .copy p {
            margin-top: 20px;
        }

        main {
            padding: 20px;
        }

        .engineer-details {
            display: flex;
            border: solid 3px #198754;
            border-radius: 50px;
            padding: 20px;
            margin: 20px auto;
            max-width: 75%;
        }

        .engineer-image {
            border-radius: 50px;
            border: solid 3px #198754;
            width: 350px;
            height: 300px;
            margin-right: 25px;
            margin-bottom: 26px;
        }

        .details-frame {
            flex: 1;
            padding: 20px;
        }

        .detail {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .detail .label {
            font-weight: bold;
        }

        .button {
            display: inline-block;
            background: #f7c35f;
            font-size: 20px;
            cursor: pointer;
            border-radius: 40px;
            padding: 10px 20px;
            margin: 5px 0;
            text-align: center;
            color: #000;
            text-decoration: none;
            border: 2px solid #000;
            box-shadow: 8px 1px 7px 0px rgba(0, 0, 0, 0.25);
        }

        .engineer-description {
            margin-top: 20px;
        }

        .engineer-description .description {
            border-radius: 50px;
            padding: 20px;
            font-size: 20px;
            border: solid 3px #198754;
        }

        .button-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-left: 113px;
            margin-top: 10px;
        }

        .custom-button {
            width: 100px; /* Adjust the width as needed */
        }

        .section-title {
            margin-right: 25%;
        }

        .btn:hover {
            background-color: white;
            color: #198754;
            transform: scale(1.02);
            text-decoration: none;
        }

        @@media (max-width: 768px) {
            .engineer-details {
                flex-direction: column;
                align-items: center;
            }

            .button-container {
                flex-direction: column;
                align-items: center;
            }
        }

        /* modal design */
        .FormContent {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-container {
            background-color: white;
            width: 90%;
            max-width: 800px;
            padding: 20px;
            box-shadow: 5px 5px 15px black;
            border-radius: 15px;
            text-align: center;
            margin: 50px auto;
        }

        .profile-title {
            font-size: 30px;
            margin-bottom: 20px;
            color: #198754;
        }

        .profile-section {
            margin-bottom: 20px;
            position: relative;
            padding: 10px;
            border: 2px solid #198754;
            border-radius: 15px;
            text-align: right;
        }

        .profile-section label {
            position: absolute;
            top: -12px;
            right: 10px;
            background-color: white;
            padding: 0 5px;
            font-weight: bold;
            font-size: 16px;
            color: #198754;
        }

        .profile-section input, select {
            width: 100%;
            padding: 10px;
            border: 2px solid #198754;
            border-radius: 20px;
            font-size: 18px;
            margin-bottom: 20px;
            margin-top: 10px;
            background-color: white;
            box-shadow: 2px 2px 2px #198754;
            outline: none;
        }

        .profile-buttons {
            display: flex;
            justify-content: space-around;
        }

        .profile-buttons .btn {
            padding: 10px 20px;
            color: #fff;
            transition: background-color 0.3s ease;
            border: 2px solid #198754;
            font-size: 25px;
            background-color: #198754;
            border-radius: 20px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: white;
            color: #198754;
            transform: scale(1.02);
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
                <img src="~/7asadLogo.jpg" alt="Logo">
            </div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/FarmerServices/FarmerHomePage" class="active">الرئيسية</a></li>
                    <li><a href="/FarmerServices/FarmerDetails/@ViewBag.FarmerId">البيانات الشخصيه</a></li>
                    <li><a href="/FarmerServices/FarmerProducts">محاصيلي الزراعيه</a></li>
                    <li><a href="/FarmerServices/FarmerEquipments">معداتي الزراعيه</a></li>
                    <li><a href="/FarmerServices/FarmerLands">اراضي الزراعيه</a></li>
                    <li><a href="/FarmerServices/FarmerHistory">عروضي</a></li>
                </ul>
            </nav>
            <div class="login">
                <a href="/SharedServices/Logout"><i class="bi bi-person"></i> تسجيل الخروج</a>
            </div>
        </div>
    </header>
    @if (TempData["RentEquipmentDateError"] != null)
    {
        <div class="alert alert-danger align-content-center" role="alert">
            <p style="display:flex;justify-content:center;font-size:25px;">@TempData["RentEquipmentDateError"]</p>
        </div>
    }
    <main>
        <section class="engineer-details">
            <div class="details-frame">
                <img class="engineer-image" src="/BuyerFarmerImages/@Model.BuyerFarmer.BuyerFarmerId/@Model.FarmerEquipmentImageUrl" alt="Engineer Image" />
                <div class="button-container">
                    <form id="form1" asp-action="ChangeEquipmentOfferAcceptStatus" asp-controller="FarmerServices" method="post">
                        <input name="OfferId" type="number" hidden value="@Model.Id" />
                        <input type="submit" value="قبول الخدمه" class="btn btn-success custom-button" />
                    </form>
                    <form id="form2" asp-action="ChangeEquipmentOfferRejectStatus" asp-controller="FarmerServices" method="post">
                        <input name="OfferId" type="number" hidden value="@Model.Id" />
                        <input type="submit" value="رفض الخدمه" class="btn btn-success custom-button" />
                    </form>
                    <a href="/FarmerServices/GetAllEquipmentOffers" class="btn btn-success custom-button">رجوع</a>
                </div>
            </div>
            <div class="details-frame">
                <h2 class="section-title">التفاصيل</h2>
                <div class="detail">
                    <span class="label">اسم مقدم الطلب</span>
                    <span class="value">@Model.BuyerFarmer.FarmerName</span>
                </div>
                <div class="detail">
                    <span class="label">هاتف مقدم الطلب</span>
                    <span class="value">@Model.BuyerFarmer.FarmerPhone</span>
                </div>
                <div class="detail">
                    <span class="label">سعر الخدمه المقدمه</span>
                    <span class="value">@Model.RentPrice</span>
                </div>
                <div class="detail">
                    <span class="label">تاريخ بدء التاجير</span>
                    <span class="value">@Model.RentStartDate</span>
                </div>
                <div class="detail">
                    <span class="label">تاريخ نهايه التاجير</span>
                    <span class="value">@Model.RentEndDate</span>
                </div>
                <div class="detail">
                    <span class="label">اسم المعده الزراعيه</span>
                    <span class="value">@Model.Equipment.EquipmentName</span>
                </div>
            </div>
        </section>
    </main>
    <footer class="footer">
        <div class="container">
            <div class="column">
                <img src="~/7asadLogo.svg" alt="Logo">
                <p>حصاد</p>
                <div class="contact-info">
                    <p>Asiut Square Mall – First Tourist Village</p>
                    <p>6 October, Asiut – Egypt</p>
                    <p>info@tasd.net</p>
                    <p>01226393057</p>
                </div>
            </div>
            <div class="column">
                <h3>روابط سريعة</h3>
                <div class="links">
                    <a href="#">الرئيسية</a>
                    <a href="#">الخدمات</a>
                    <a href="#">تكنولوجيا</a>
                    <a href="#">المدونة</a>
                </div>
            </div>
            <div class="column">
                <h3>تابعنا</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>
        </div>
        <div class="copy">
            <p>&copy; 2024 جميع الحقوق محفوظة لتطبيق حصاد</p>
        </div>
    </footer>
</body>
</html>
