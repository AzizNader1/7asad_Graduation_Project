@model CompanyImageDto
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>الصفحه الرئيسيه للشركه</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: white
        }

        header {
            background: #fff;
            padding: 10px 0;
            border-bottom: 2px solid #198754
        }

        .container {
            max-width: 1200px;
            margin: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .logo img {
            max-width: 100px;
        }

        nav {
            flex: 1;
            text-align: center;
        }

        .nav-links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
        }

            .nav-links li {
                margin: 0 15px;
            }

            .nav-links a {
                color: #198754;
                text-decoration: none;
                font-size: 18px;
            }

                .nav-links a.active {
                    border-bottom: 2px solid white;
                }

        .login {
            font-size: 18px;
        }

            .login a {
                color: #198754;
                text-decoration: none;
            }

        .LastLink {
            position: absolute;
            right: 90%;
            text-decoration: none;
            color: #fff;
            font-size: 20px;
            top: 30px
        }

        .footer {
            background-color: #198754;
            padding: 20px 0;
            color: white;
            text-align: center;
            margin-top: auto; /* Push the footer to the bottom */
        }

            .footer .container {
                max-width: 1200px;
                margin: auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: wrap;
            }

            .footer .column {
                flex: 1;
                min-width: 200px;
                padding: 10px;
            }

                .footer .column img {
                    max-width: 150px;
                    margin-bottom: 10px;
                }

            .footer .social-icons a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
                font-size: 24px;
            }

            .footer .links a {
                display: block;
                color: white;
                text-decoration: none;
                margin: 5px 0;
            }

                .footer .links a:hover {
                    text-decoration: underline;
                }

            .footer .contactinfo p {
                margin: 5px 0;
                color: white
            }

            .footer .copy {
                margin-top: 40px;
                font-size: 14px;
                border-top-style: solid;
                border-top-width: 2px;
                border-block-color: #fff;
                display: flex;
                justify-content: center
            }

                .footer .copy p {
                    margin-top: 20px;
                    color: white; /* Ensure footer text color is white */
                }

        .profilecontainer {
            background-color: white;
            width: 90%;
            max-width: 800px;
            padding: 20px;
            box-shadow: 5px 5px 10px black;
            border-radius: 15px;
            text-align: center;
            margin: auto; /* Center horizontally */
            display: flex;
            flex-direction: column;
            align-items: center; /* Center content horizontally */
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .profiletitle {
            font-size: 30px;
            margin-bottom: 20px;
            color: #198754;
        }

        .profilesection {
            display: flex;
            margin-bottom: 20px;
            padding: 10px;
            border: 2px solid #198754;
            border-radius: 15px;
            width: 100%;
            justify-content: center; /* Center content within sections */
        }

        .profileimage img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            box-shadow: 5px 5px 10px #6E2C00;
        }

        .profileinfo p {
            width: 500px;
            margin-top: 15px;
            color: black;
            font-size: 24px;
        }

        .contactitem, .addressitem {
            margin-bottom: 10px;
        }

            .contactitem label, .addressitem label, p {
                font-weight: bold;
                font-size: 24px;
                display: block;
                margin-top: 15px;
                margin-bottom: 5px;
                color: black;
                width: 350px;
            }

        .profilebuttons {
            display: flex;
            justify-content: space-around;
            width: 100%;
        }

            .profilebuttons .btn {
                padding: 10px 20px;
                color: #fff;
                transition: background-color 0.3s ease;
                border: 2px solid #198754;
                font-size: 25px;
                background-color: #198754;
                border-radius: 20px;
                cursor: pointer;
            }

        .btn:hover {
            background-color: white;
            color: #198754;
            transform: scale(1.02);
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
                <img src="~/7asadLogo.jpg" alt="Logo">
            </div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/CompaniesServices/CompanyHomePage" class="active">الرئيسية</a></li>
                    <li><a href="/CompaniesServices/CompanyHistory">عروضي</a></li>
                </ul>
            </nav>
            <div class="login">
                <a href="/SharedServices/Logout"><i class="bi bi-person"></i> تسجيل الخروج</a>
            </div>
        </div>
    </header>
    @if (TempData["GetEditCompanyProfileError"] != null)
    {
        <div class="alert alert-danger align-content-center" role="alert">
            <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetEditCompanyProfileError"]</p>
        </div>
    }
    <div class="profilecontainer">
        <h1 class="profiletitle">البيانات الشخصيه</h1>
        <div class="profilesection">
            <div class="profileimage">
                <img src="/CompanyImages/@Model.Company.CompanyId/@Model.CompanyImageUrl" alt="User Image">
            </div>
            <div class="profileinfo">
                <p>@Model.Company.CompanyName</p>
            </div>
        </div>
        <div class="profilesection">
            <div class="contactitem">
                <label>نوع الشركه</label>
                <p>@Model.Company.CompanyType</p>
            </div>
            <div class="contactitem">
                <label>البريد الشخصي</label>
                <p>@Model.Company.CompanyEmail</p>
            </div>
        </div>
        <div class="profilesection">
            <div class="addressitem">
                <label>المحافظه</label>
                <p>@Model.Company.CompanyAddress</p>
            </div>
            <div class="addressitem">
                <label>الشارع</label>
                <p></p>
            </div>
        </div>
        <div class="profilebuttons">
            <button class="btn btn-success" onclick="window.location.href='/CompaniesServices/CompanyHomePage'">رجوع</button>
            <button class="btn btn-success" onclick="window.location.href='/CompaniesServices/EditProfile/@Model.Company.CompanyId'">تعديل</button>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="column">
                <img src="~/7asadLogo.svg" alt="Logo">
                <div class="contactinfo">
                    <p>حصاد</p>
                    <p>Asiut Square Mall – First Tourist Village</p>
                    <p>6 October, Asiut – Egypt</p>
                    <p>info@tasd.net</p>
                    <p>01226393057</p>
                </div>
            </div>
            <div class="column">
                <h3>روابط سريعة</h3>
                <div class="links">
                    <a href="#">الرئيسية</a>
                    <a href="#">الخدمات</a>
                    <a href="#">تكنولوجيا</a>
                    <a href="#">المدونة</a>
                </div>
            </div>
            <div class="column">
                <h3>تابعنا</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>
        </div>
        <div class="copy">
            <p>&copy; 2024 جميع الحقوق محفوظة لتطبيق حصاد</p>
        </div>
    </footer>
</body>
</html>
