@{
    ViewData["Title"] = "الصفحه الرئيسيه للشركات";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>خدمات حصاد</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            direction: rtl;
            text-align: right;
        }

        .hero {
            position: relative;
            text-align: center;
            color: white;
        }

            .hero img {
                width: 100%;
                height: auto;
            }

            .hero h1 {
                position: absolute;
                top: 50%;
                text-align: center;
                left: 50%;
                transform: translate(70%, -155%);
                font-size: 4.5em;
                padding: 10px 20px;
                border-radius: 10px;
                color: #ffffff;
                padding: 20px;
                border-radius: 15px;
                font-weight: bold;
            }

        .services {
            position: relative;
            display: flex;
            justify-content: space-around;
            flex-wrap: nowrap;
            padding: 0 20px;
            margin-top: -100px;
        }

        .card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            width: 18%;
            margin: 10px 5px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease, border-color 0.3s ease;
            position: relative;
            z-index: 1;
            opacity: 0;
            transform: translateY(20px);
            perspective: 1000px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px; /* Adjusted height for better spacing with buttons */
        }

            .card.visible {
                opacity: 1;
                transform: translateY(0);
                transition: opacity 1s ease, transform 1s ease;
            }

            .card:hover {
                transform: scale(1.05);
                border: 3px solid #198754;
            }

            .card img {
                width: 50px;
                height: 50px;
            }

            .card h2 {
                margin: 20px 0;
                font-size: 1.2em;
            }

            .card button {
                background: #198754;
                color: #fff;
                max-height: 40px;
                min-width: 200px;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background 0.3s ease;
                margin: 5px;
            }

                .card button:hover {
                    background: white;
                    color: #198754;
                    border: 1px solid #198754;
                }

        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            transition: transform 0.6s;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .card-front {
            transform: rotateY(0deg);
        }

        .card-back {
            transform: rotateY(180deg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .card-back .button-container {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                align-items: center;
                gap: 10px; /* Adds space between buttons */
            }

                .card-back .button-container button {
                    flex: 1 1 40%;
                    margin: 5px;
                }

        .card:hover .card-front {
            transform: rotateY(-180deg);
        }

        .card:hover .card-back {
            transform: rotateY(0deg);
        }



        .description {
            padding: 20px;
            line-height: 1.6;
            font-size: 1.8em;
            text-align: right;
            margin-top: 20px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            opacity: 0;
            transform: translateY(20px);
        }

            .description.visible {
                opacity: 1;
                transform: translateY(0);
                transition: opacity 1s ease, transform 1s ease;
            }

        header {
            background: #fff;
            padding: 10px 0;
            border-bottom: 2px solid #0e690e;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .logo img {
            width: 75px;
            height: 75px;
            max-width: 100px;
        }

        nav {
            flex: 1;
            text-align: center;
        }

        .nav-links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
        }

            .nav-links li {
                margin: 0 15px;
            }

            .nav-links a {
                color: #0e690e;
                text-decoration: none;
                font-size: 18px;
            }

                .nav-links a.active {
                    border-bottom: 2px solid white;
                }

        .login {
            font-size: 18px;
        }

            .login a {
                color: #0e690e;
                text-decoration: none;
            }

        .LastLink {
            position: absolute;
            right: 90%;
            text-decoration: none;
            color: #fff;
            font-size: 20px;
            top: 30px;
        }

        .footer {
            background-color: #198754;
            padding: 20px 0;
            color: white;
            text-align: center;
        }

            .footer .container {
                max-width: 1200px;
                margin: auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: wrap;
            }

            .footer .column {
                flex: 1;
                min-width: 200px;
                padding: 10px;
            }

                .footer .column img {
                    max-width: 150px;
                    margin-bottom: 10px;
                }

            .footer .social-icons a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
                font-size: 24px;
            }

            .footer .links a {
                display: block;
                color: white;
                text-decoration: none;
                margin: 5px 0;
            }

                .footer .links a:hover {
                    text-decoration: underline;
                }

            .footer .contact-info p {
                margin: 5px 0;
                color: #fff;
            }

            .footer .copy {
                margin-top: 40px;
                font-size: 14px;
                border-top-style: solid;
                border-top-width: 2px;
                border-block-color: #fff;
            }

                .footer .copy p {
                    margin-top: 20px;
                }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
                <img src="/7asadLogo.jpg" alt="Logo">
            </div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/CompaniesServices/CompanyProfile/@ViewBag.CompanyId">الحساب الشخصي</a></li>
                    <li><a href="/CompaniesServices/CompanyHistory">عروضي</a></li>
                </ul>
            </nav>
            <div class="login">
                <a href="/SharedServices/Logout"><i class="bi bi-person"></i> تسجيل الخروج</a>
            </div>
        </div>
    </header>
    <!-- Assuming header is included here -->
    <main>
        @if (TempData["EditResult"] != null)
        {
            <div class="alert alert-success align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["EditResult"]</p>
            </div>
        }

        @if (TempData["GelAllLandsError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GelAllLandsError"]</p>
            </div>
        }

        @if (TempData["GelAllProductsError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GelAllProductsError"]</p>
            </div>
        }

        @if (TempData["GetAllEngineerError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetAllEngineerError"]</p>
            </div>
        }

        @if (TempData["GetCompanyProfileError"] != null)
        {
            <div class="alert alert-danger align-content-center" role="alert">
                <p style="display:flex;justify-content:center;font-size:25px;">@TempData["GetCompanyProfileError"]</p>
            </div>
        }

        <section class="hero">
            <img src="/FarmerHomePage/img.png" alt="Farmer in the field">
            <h1>
                خدمات حصاد
                <br>
                لتسهيل الزراعة
            </h1>
        </section>
        <section class="services">
            <div class="card" onclick="window.location.href='/CompaniesServices/GetAllEngineers'">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 3">
                    <h2>التعاقد مع المهندسين</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/CompaniesServices/GetAllEngineers'">عرض المهندسين</button>
                </div>
            </div>
            <div class="card" onclick="window.location.href='/CompaniesServices/GetAllProducts'">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 3">
                    <h2>شراء محاصيل زراعيه</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/CompaniesServices/GetAllProducts'">عرض المحاصيل</button>
                </div>
            </div>
            <div class="card" onclick="window.location.href='/CompaniesServices/GetAllLands'">
                <div class="card-face card-front">
                    <img src="/FarmerHomePage/euroMoney.png" alt="Icon 3">
                    <h2>تاجير اراضى زراعيه</h2>
                </div>
                <div class="card-face card-back">
                    <button onclick="window.location.href='/CompaniesServices/GetAllLands'">عرض الاراضى</button>
                </div>
            </div>
        </section>
        <section class="description">
            <p>"حصاد" بيقدملك الكثير من الخدمات لمجرد انضمامك لهذ المجتمع.</p>
            <p>من الخدمات اللي "حصاد" بيقدمهالك :</p>
            <p>انك تقدر تتعاقد مع احدي المهندسين اللي متاحين في "حصاد" واللي من خلالهم تقدر انك تفحص التربه اللي انت عايز تتاجرها وتتاكد من ملائمه التربه للمحصول اللي انت عايزه.</p>
            <p>"حصاد" ايضا بيقدملك تسهيلات في التعامل مع المزارعين من اجل تاجير قدع من اراضيهم الخاصه واستخدامها في زراعه اللي انت عايزه.</p>
            <p>"حصاد" بيقدملك سهوله في شراء المحاصيل الزراعيه اللي بتستخدمها في منتجاتك بكل سهوله.</p>
        </section>

    </main>
    <!-- Assuming footer is included here -->
    <footer class="footer">
        <div class="container">
            <div class="column">
                <div class="contact-info">
                    <img src="~/7asadLogo.svg" alt="Logo" class="logo">
                    <p>حصاد</p>
                    <p>Asiut Square Mall – First Tourist Village</p>
                    <p>6 October, Asiut – Egypt</p>
                    <p>info@tasd.net</p>
                    <p>01226393057</p>
                </div>
            </div>
            <div class="column">
                <h3>روابط سريعة</h3>
                <div class="links">
                    <a href="#">الرئيسية</a>
                    <a href="#">الخدمات</a>
                    <a href="#">تكنولوجيا</a>
                    <a href="#">المدونة</a>
                </div>
            </div>
            <div class="column">
                <h3>تابعنا</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>
        </div>
        <div class="copy">
            <p>&copy; 2024 جميع الحقوق محفوظة لتطبيق حصاد</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const cards = document.querySelectorAll('.card');
            const descriptions = document.querySelectorAll('.description');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1
            });

            cards.forEach(card => {
                observer.observe(card);
            });

            descriptions.forEach(description => {
                observer.observe(description);
            });
        });
    </script>
</body>
</html>
